{
  "compilerOptions": {
    "outDir": "./dist/packages/all",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "es2015",
    "lib": [
      "es5",
      "es2015",
      "dom"
    ],
    "types": [
    ],
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules/"
  ]
}
